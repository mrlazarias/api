{
    "name": "murilo/robust-api",
    "description": "API PHP robusta com arquitetura hexagonal",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Murilo Azarias",
            "email": "murilo@example.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "doctrine/orm": "^2.17",
        "doctrine/dbal": "^3.7",
        "doctrine/migrations": "^3.7",
        "firebase/php-jwt": "^6.9",
        "monolog/monolog": "^3.5",
        "predis/predis": "^2.2",
        "ramsey/uuid": "^4.7",
        "vlucas/phpdotenv": "^5.6",
        "respect/validation": "^2.2",
        "league/fractal": "^0.20",
        "cakephp/chronos": "^2.4",
        "symfony/console": "^6.4",
        "symfony/cache": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "pestphp/pest": "^2.28",
        "mockery/mockery": "^1.6",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "friendsofphp/php-cs-fixer": "^3.45"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "phpstan": "phpstan analyse",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "migrate": "php console.php migrations:migrate",
        "serve": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

